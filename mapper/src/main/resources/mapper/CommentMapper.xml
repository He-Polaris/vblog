        <result column="article_id" property="articleId" />
        <result column="content" property="content" />
        <result column="parent_id" property="parentId" />
        <result column="to_uid" property="toUid" />
        <result column="level_flag" property="levelFlag" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <association property="user" javaType="com.ddm.vblog.entity.User">
            <id column="u_id" property="id"/>
            <result column="nickname" property="nickname"/>
        </association>
        <collection property="recoverys" ofType="com.ddm.vblog.entity.Recovery">
            <id column="r_id" property="id"/>
            <result column="comment_id" property="commentId"/>
            <result column="comment_user_id" property="commentUserId"/>
            <result column="r_content" property="content"/>
            <result column="r_create_time" property="createTime"/>
            <result column="r_user_id" property="userId"/>
            <association property="user" javaType="com.ddm.vblog.entity.User">
                <id column="u_id" property="id"/>
                <result column="nickname" property="nickname"/>
            </association>
        </collection>
    </resultMap>

